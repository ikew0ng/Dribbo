<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_category_general">
        <EditTextPreference
            android:key="@string/pref_key_login"
            android:summary="@string/pref_summary_login"
            android:title="@string/pref_title_login"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_about">
        <Preference
            android:key="@string/pref_key_coder"
            android:summary="@string/pref_summary_coder"
            android:title="@string/pref_title_coder">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://weibo.com/issacsuixing"/>
        </Preference>
        <Preference
            android:key="@string/pref_key_designer"
            android:summary="@string/pref_summary_designer"
            android:title="@string/pref_title_designer">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://weibo.com/kenefe"/>
        </Preference>
        <Preference
            android:key="@string/pref_key_from"
            android:title="@string/pref_title_from">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.refactech.com"/>
        </Preference>
        <Preference
            android:key="@string/pref_key_donate"
            android:title="@string/pref_title_donate">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/donate_url"/>
        </Preference>
        <Preference android:key="@string/pref_key_version">
        </Preference>
        <Preference
            android:key="@string/pref_key_github"
            android:title="@string/pref_title_github">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/IssacWang/Dribbo"/>
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>